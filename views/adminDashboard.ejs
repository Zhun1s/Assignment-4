<%- include('html', { title: "Admin Dashboard", user: user }); %>

<h2>Admin Dashboard</h2>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td>
          <a href="/admin/edit/<%= user._id %>">Edit</a>
          <form action="/admin/delete/<%= user._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>